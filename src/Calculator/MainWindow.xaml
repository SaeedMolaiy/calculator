<Window x:Class="Calculator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Calculator"
        mc:Ignorable="d"
        Title="" 
        Height="580"
        Width="350"
        WindowStyle="None"
        AllowsTransparency="False"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen">

    <Grid Background="{StaticResource BackgroundBrush}">

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border x:Name="TitleBar"
                Grid.Row="0"
                Grid.Column="0"
                Background="{StaticResource TitleBarBrush}"
                Grid.ColumnSpan="4">

            <DockPanel LastChildFill="True">

                <TextBlock 
                    Margin="10,0,0,0"
                    Text="Calculator" 
                    FontSize="15"
                    Foreground="White"
                    VerticalAlignment="Center"/>

                <StackPanel Orientation="Horizontal" DockPanel.Dock="Right" HorizontalAlignment="Right">

                    <Button x:Name="MinimizeButton"
                            Style="{StaticResource TitleBarButtonStyle}"
                            Content="—"/>

                    <Button x:Name="MaximizeButton"
                            Style="{StaticResource TitleBarButtonStyle}"
                            Content="◻"/>

                    <Button x:Name="CloseButton"
                            Style="{StaticResource TitleBarButtonStyle}"
                            Content="✕"/>

                </StackPanel>

            </DockPanel>

        </Border>

        <Label x:Name="ExpressionLabel"
               Grid.Column="0" 
               Grid.ColumnSpan="4"
               Grid.Row="1"
               VerticalContentAlignment="Center"
               HorizontalContentAlignment="Right"
               FontSize="18px"
               Foreground="Gray"/>

        <Label x:Name="ResultLabel"
               Content="0"
               Grid.Column="0" 
               Grid.ColumnSpan="4"
               Grid.Row="2"
               VerticalContentAlignment="Bottom"
               HorizontalContentAlignment="Right"
               FontSize="30px"
               Foreground="White"/>

        <Button x:Name="ACButton"
                Content="AC"              
                Grid.Column="0"
                Grid.Row="3"
                Style="{StaticResource OperationButtonStyle}"/>

        <Button x:Name="NegativeButton"
                Content="+/-"
                Grid.Column="1"
                Grid.Row="3"
                Style="{StaticResource OperationButtonStyle}"/>

        <Button x:Name="PercentageButton"
                Content="%"
                Grid.Column="2"
                Grid.Row="3"
                Style="{StaticResource OperationButtonStyle}"/>

        <Button x:Name="DivideButton"
                Content="÷"
                Grid.Column="3"
                Grid.Row="3"
                Style="{StaticResource OperationButtonStyle}"/>

        <Button x:Name="NumberOneButton"
                Content="1"
                Grid.Column="0"
                Grid.Row="4"
                Style="{StaticResource NumberButtonStyle}"/>

        <Button x:Name="NumberTwoButton"
                Content="2"
                Grid.Column="1"
                Grid.Row="4"
                Style="{StaticResource NumberButtonStyle}"/>

        <Button x:Name="NumberThreeButton"
                Content="3"
                Grid.Column="2"
                Grid.Row="4"
                Style="{StaticResource NumberButtonStyle}"/>

        <Button x:Name="MultiplyButton"
                Content="*"
                Grid.Column="3"
                Grid.Row="4"
                Style="{StaticResource OperationButtonStyle}"/>

        <Button x:Name="NumberFourButton"
                Content="4"
                Grid.Column="0"
                Grid.Row="5"
                Style="{StaticResource NumberButtonStyle}"/>

        <Button x:Name="NumberFiveButton"
                Content="5"
                Grid.Column="1"
                Grid.Row="5"
                Style="{StaticResource NumberButtonStyle}"/>

        <Button x:Name="NumberSixButton"
                Content="6"
                Grid.Column="2"
                Grid.Row="5"
                Style="{StaticResource NumberButtonStyle}"/>

        <Button x:Name="MinusButton"
                Content="-"
                Grid.Column="3"
                Grid.Row="5"
                Style="{StaticResource OperationButtonStyle}"/>

        <Button x:Name="NumberSevenButton"
                Content="7"
                Grid.Column="0"
                Grid.Row="6"
                Style="{StaticResource NumberButtonStyle}"/>

        <Button x:Name="NumberEightButton"
                Content="8"
                Grid.Column="1"
                Grid.Row="6"
                Style="{StaticResource NumberButtonStyle}"/>

        <Button x:Name="NumberNineButton"
                Content="9"
                Grid.Column="2"
                Grid.Row="6"
                Style="{StaticResource NumberButtonStyle}"/>

        <Button x:Name="PlusButton"
                Content="+"
                Grid.Column="3"
                Grid.Row="6"
                Style="{StaticResource OperationButtonStyle}"/>

        <Button x:Name="NumberZeroButton"
                Content="0"
                Grid.Column="0"
                Grid.ColumnSpan="2"
                Grid.Row="7"
                Style="{StaticResource NumberButtonStyle}"/>

        <Button x:Name="DecimalButton"
                Content="."
                Grid.Column="2"
                Grid.Row="7"
                Style="{StaticResource NumberButtonStyle}"/>

        <Button x:Name="EqualButton"
                Content="="
                Grid.Column="3"
                Grid.Row="7"
                Style="{StaticResource EqualButtonStyle}"/>

    </Grid>

</Window>