<Window x:Class="Calculator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Calculator"
        mc:Ignorable="d"
        Title="" 
        Height="580"
        Width="350"
        WindowStyle="None"
        AllowsTransparency="False"
        ResizeMode="NoResize">

    <Grid Background="#212120">

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0"
                Grid.Column="0"
                Background="#222" 
                MouseLeftButtonDown="DragWindow"
                Grid.ColumnSpan="4">

            <DockPanel LastChildFill="True">

                <TextBlock 
                    Margin="10,0,0,0"
                    Text="Calculator" 
                    FontSize="15"
                    Foreground="White"
                    VerticalAlignment="Center"/>

                <StackPanel Orientation="Horizontal" DockPanel.Dock="Right" HorizontalAlignment="Right">

                    <Button
                        Click="Minimize"
                        Cursor="Hand" 
                        Content="—" 
                        Width="40" 
                        Background="Transparent" 
                        Foreground="White"
                        BorderThickness="0"/>

                    <Button 
                        Click="Maximize"
                        Cursor="Hand"
                        Content="◻"
                        Width="40" 
                        Background="Transparent" 
                        Foreground="White" 
                        BorderThickness="0"/>

                    <Button 
                            Click="Close"
                            Cursor="Hand" 
                            Content="✕" 
                            Width="40" 
                            Background="Transparent" 
                            Foreground="White"  
                            BorderThickness="0"/>

                </StackPanel>

            </DockPanel>

        </Border>

        <Label Content="0"
               Grid.Column="0" 
               Grid.ColumnSpan="4"
               Grid.Row="1"
               VerticalContentAlignment="Bottom"
               HorizontalContentAlignment="Right"
               FontSize="40px"
               Foreground="White"/>

        <Button Content="%"              
                Grid.Column="0"
                Grid.Row="2"
                FontSize="25px"
                Margin="2px"
                Background="#333233"
                Foreground="White"/>

        <Button Content="CE"
                Grid.Column="1"
                Grid.Row="2"
                FontSize="25px"
                Margin="2px"
                Background="#333233"
                Foreground="White"/>

        <Button Content="C"
                Grid.Column="2"
                Grid.Row="2"
                FontSize="25px"
                Margin="2px"
                Background="#333233"
                Foreground="White"/>

        <Button Content="/"
                Grid.Column="3"
                Grid.Row="2"
                FontSize="25px"
                Margin="2px"
                Background="#333233"
                Foreground="White"/>

        <Button Content="1"
                Grid.Column="0"
                Grid.Row="3"
                FontSize="25px"
                Margin="2px"
                Background="#333233"
                Foreground="White"/>

        <Button Content="2"
                Grid.Column="1"
                Grid.Row="3"
                FontSize="25px"
                Margin="2px"
                Background="#333233"
                Foreground="White"/>

        <Button Content="3"
                Grid.Column="2"
                Grid.Row="3"
                FontSize="25px"
                Margin="2px"
                Background="#333233"
                Foreground="White"/>

        <Button Content="X"
                Grid.Column="3"
                Grid.Row="3"
                FontSize="25px"
                Margin="2px"
                Background="#333233"
                Foreground="White"/>

        <Button Content="4"
                Grid.Column="0"
                Grid.Row="4"
                FontSize="25px"
                Margin="2px"
                Background="#333233"
                Foreground="White"/>

        <Button Content="5"
                Grid.Column="1"
                Grid.Row="4"
                FontSize="25px"
                Margin="2px"
                Background="#333233"
                Foreground="White"/>

        <Button Content="6"
                Grid.Column="2"
                Grid.Row="4"
                FontSize="25px"
                Margin="2px"
                Background="#333233"
                Foreground="White"/>

        <Button Content="-"
                Grid.Column="3"
                Grid.Row="4"
                FontSize="25px"
                Margin="2px"
                Background="#333233"
                Foreground="White"/>

        <Button Content="7"
                Grid.Column="0"
                Grid.Row="5"
                FontSize="25px"
                Margin="2px"
                Background="#333233"
                Foreground="White"/>

        <Button Content="8"
                Grid.Column="1"
                Grid.Row="5"
                FontSize="25px"
                Margin="2px"
                Background="#333233"
                Foreground="White"/>

        <Button Content="9"
                Grid.Column="2"
                Grid.Row="5"
                FontSize="25px"
                Margin="2px"
                Background="#333233"
                Foreground="White"/>

        <Button Content="+"
                Grid.Column="3"
                Grid.Row="5"
                FontSize="25px"
                Margin="2px"
                Background="#333233"
                Foreground="White"/>

        <Button Content="0"
                Grid.Column="0"
                Grid.ColumnSpan="2"
                Grid.Row="6"
                FontSize="25px"
                Margin="2px"
                Background="#333233"
                Foreground="White"/>

        <Button Content="."
                Grid.Column="2"
                Grid.Row="6"
                FontSize="25px"
                Margin="2px"
                Background="#333233"
                Foreground="White"/>

        <Button Content="="
                Grid.Column="3"
                Grid.Row="6"
                FontSize="25px"
                Margin="2px"
                Background="#4dc2fe"
                Foreground="Black"/>

    </Grid>

</Window>